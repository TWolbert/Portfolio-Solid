{
  "name": "vite-template-solid",
  "version": "0.0.0",
  "description": "",
  "type": "module",
  "scripts": {
    "start": "NODE_ENV=production bun api/server.ts",
    "dev": "concurrently 'vite' 'bun run --watch api/server.ts'",
    "build": "npm run build:client && npm run build:server",
    "build:client": "vite build",
    "build:server": "vite build --ssr src/entry-server.tsx",
    "serve": "vite preview",
    "format": "biome check --write --unsafe",
    "migrate": "bun api/migrate.ts"
  },
  "license": "MIT",
  "devDependencies": {
    "@biomejs/biome": "2.3.4",
    "@tailwindcss/postcss": "^4.1.13",
    "@types/bun": "^1.3.1",
    "postcss": "^8.4.49",
    "sharp": "^0.34.5",
    "solid-devtools": "^0.34.3",
    "tailwindcss": "^4.1.13",
    "vite": "^7.1.4",
    "vite-plugin-image-optimizer": "^2.0.3",
    "vite-plugin-solid": "^2.11.8",
    "vsgo": "^0.0.4"
  },
  "dependencies": {
    "@elysiajs/cookie": "^0.8.0",
    "@elysiajs/static": "^1.4.7",
    "@solidjs/router": "^0.15.1",
    "bootstrap-icons": "^1.13.1",
    "concurrently": "^9.2.1",
    "elysia": "^1.4.15",
    "ky": "^1.14.0",
    "solid-js": "^1.9.5",
    "svgo": "^4.0.0",
    "zod": "^4.1.12"
  }
}
